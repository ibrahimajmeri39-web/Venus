            min-height: 80vh;
        }

        /* --- SCREEN: ENTER (PRELOADER) --- */
        #enter-screen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: #000;
            z-index: 100;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: opacity 1.5s ease;
            cursor: pointer;
        }
        .enter-text {
            font-family: 'Cinzel', serif;
            letter-spacing: 4px;
            font-size: 0.9rem;
            color: var(--gold);
            text-transform: uppercase;
            animation: pulse 2s infinite;
        }

        /* --- SCREEN: MAIN --- */
        #main-content {
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 2s ease, transform 2s var(--ease-out);
            display: none; /* Hidden initially */
        }

        /* Photo Frame */
        .photo-wrapper {
            width: 220px;
            height: 220px;
            border-radius: 50%;
            margin-bottom: 30px;
            position: relative;
            opacity: 0; /* JS reveals this */
            transform: scale(0.9);
            transition: all 1.5s var(--ease-out);
            box-shadow: 0 0 30px rgba(212, 175, 55, 0.1);
        }
        
        .photo-wrapper::after {
            content: '';
            position: absolute;
            top: -5px; left: -5px; right: -5px; bottom: -5px;
            border-radius: 50%;
            border: 1px solid var(--gold);
            opacity: 0.3;
            animation: spin 20s linear infinite;
        }

        .photo-img {
            width: 100%;
