    <audio id="bg-music" loop>
        <source src="https://cdn.pixabay.com/download/audio/2022/10/25/audio_249419143a.mp3?filename=romantic-piano-125028.mp3" type="audio/mpeg">
    </audio>

    <canvas id="bg-canvas"></canvas>

    <div id="enter-screen">
        <div class="enter-text">Tap to Enter</div>
    </div>

    <div class="container" id="main-content">
        <div class="photo-wrapper" id="photo-el">
            <img src="herphoto.jpg" alt="Venus" class="photo-img">
        </div>
        
        <h1 class="name-title" id="name-el">Dearest Venus</h1>
        
        <div class="message-box" id="typewriter"></div>

        <button class="btn-premium" id="yes-btn">Yes, I will ðŸ’•</button>
    </div>

    <div id="final-screen">
        <div class="final-text">Forever Yours</div>
        <div class="final-sub">Always.</div>
    </div>

    <script>
        /* --- CONFIGURATION --- */
        const CONFIG = {
            redirectPhone: "919389143611",
            redirectMessage: "Yes I will be your Valentine â¤ï¸",
            typewriterText: "In a world of noise, you are my quiet melody. Will you make this moment eternal?",
            redirectDelay: 5000 // 5 seconds to watch fireworks
        };

        /* --- DOM ELEMENTS --- */
        const enterScreen = document.getElementById('enter-screen');
        const mainContent = document.getElementById('main-content');
        const bgMusic = document.getElementById('bg-music');
        const photoEl = document.getElementById('photo-el');
        const nameEl = document.getElementById('name-el');
        const typewriterEl = document.getElementById('typewriter');
        const yesBtn = document.getElementById('yes-btn');
        const finalScreen = document.getElementById('final-screen');
        const canvas = document.getElementById('bg-canvas');
        const ctx = canvas.getContext('2d');

        /* --- STATE --- */
        let particles = [];
        let fireworks = [];
        let canvasWidth, canvasHeight;

        /* --- INITIALIZATION --- */
        resizeCanvas();
        window.addEventListener('resize', resizeCanvas);
        initParticles();
        animateBackground();

        /* --- USER INTERACTION FLOW --- */
        
        // 1. Enter Screen Click
        enterScreen.addEventListener('click', () => {
            // Start Music
            bgMusic.volume = 0.5;
            bgMusic.play().catch(e => console.log("Audio play failed", e));
            
            // Fade out enter screen
            enterScreen.style.opacity = '0';
            setTimeout(() => {
                enterScreen.style.display = 'none';
                showMainContent();
            }, 1500);
        });

        // 2. Show Main Content Sequence
        function showMainContent() {
            mainContent.style.display = 'flex';
            // Trigger CSS Reflow
            void mainContent.offsetWidth; 
            mainContent.classList.add('fade-in');

            // Sequence: Photo -> Name -> Typewriter -> Button
            setTimeout(() => {
                photoEl.classList.add('fade-in');
            }, 500);

            setTimeout(() => {
                nameEl.classList.add('fade-in');
            }, 1200);

            setTimeout(() => {
                startTypewriter();
            }, 2000);
        }

        // 3. Typewriter Effect
        function startTypewriter() {
            const text = CONFIG.typewriterText;
            let i = 0;
            const speed = 50; // ms per char

            function type() {
                if (i < text.length) {
                    typewriterEl.innerHTML += text.charAt(i);
                    i++;
                    setTimeout(type, speed);
                } else {
                    // Show button after typing done
                    setTimeout(() => {
                        yesBtn.classList.add('fade-in');
                    }, 500);
                }
            }
            type();
        }

        // 4. Yes Button Click
        yesBtn.addEventListener('click', () => {
            // Launch Fireworks loop
            launchFireworks();
            
            // Fade out main content
            mainContent.style.opacity = '0';
            mainContent.style.transform = 'translateY(-20px)';
            
            setTimeout(() => {
                mainContent.style.display = 'none';
                showFinalScreen();
            }, 1500);
        });

        // 5. Final Screen & Redirect
        function showFinalScreen() {
            finalScreen.style.display = 'flex';
            void finalScreen.offsetWidth;
            finalScreen.style.opacity = '1';

            // WhatsApp Redirect
            setTimeout(() => {
                const text = encodeURIComponent(CONFIG.redirectMessage);
                window.location.href = `https://wa.me/${CONFIG.redirectPhone}?text=${text}`;
            }, CONFIG.redirectDelay);
        }

        /* --- GRAPHICS ENGINE (CANVAS) --- */

        function resizeCanvas() {
            canvasWidth = window.innerWidth;
            canvasHeight = window.innerHeight;
            canvas.width = canvasWidth;
            canvas.height = canvasHeight;
        }

        // Ambient Particles (Gold Dust)
        function initParticles() {
            for(let i=0; i < 60; i++) {
                particles.push({
                    x: Math.random() * canvasWidth,
                    y: Math.random() * canvasHeight,
                    size: Math.random() * 2,
                    speedY: Math.random() * 0.5 - 0.25,
                    speedX: Math.random() * 0.5 - 0.25,
                    opacity: Math.random()
                });
            }
        }

        // Simple Firework Class
        class Firework {
            constructor(x, y) {
                this.x = x;
                this.y = y;
                this.particles = [];
                const colors = ['#d4af37', '#ffffff', '#ffeb3b', '#e6c200'];
                
                for(let i=0; i<30; i++) {
                    const angle = (Math.PI * 2 * i) / 30;
                    const speed = Math.random() * 3 + 2;
                    this.particles.push({
                        x: x,
                        y: y,
                        vx: Math.cos(angle) * speed,
                        vy: Math.sin(angle) * speed,
                        alpha: 1,
                        color: colors[Math.floor(Math.random() * colors.length)],
                        decay: Math.random() * 0.02 + 0.01
                    });
                }
            }

            update() {
                this.particles.forEach(p => {
                    p.x += p.vx;
                    p.y += p.vy;
                    p.vy += 0.05; // gravity
                    p.alpha -= p.decay;
                });
                this.particles = this.particles.filter(p => p.alpha > 0);
            }

            draw(ctx) {
                this.particles.forEach(p => {
                    ctx.globalAlpha = p.alpha;
                    ctx.fillStyle = p.color;
                    ctx.beginPath();
                    ctx.arc(p.x, p.y, 2, 0, Math.PI * 2);
                    ctx.fill();
                });
                ctx.globalAlpha = 1;
            }
        }

        function launchFireworks() {
            // Create random fireworks
            setInterval(() => {
                const x = Math.random() * canvasWidth;
                const y = Math.random() * (canvasHeight / 2); // Top half
                fireworks.push(new Firework(x, y));
            }, 800);
        }

        function animateBackground() {
            ctx.clearRect(0, 0, canvasWidth, canvasHeight);

            // Draw Particles (Ambient)
            ctx.fillStyle = '#d4af37';
            particles.forEach(p => {
                p.x += p.speedX;
                p.y += p.speedY;
                if(p.x > canvasWidth) p.x = 0;
                if(p.x < 0) p.x = canvasWidth;
                if(p.y > canvasHeight) p.y = 0;
                if(p.y < 0) p.y = canvasHeight;

                ctx.globalAlpha = p.opacity;
                ctx.beginPath();
                ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
                ctx.fill();
            });

            // Draw Fireworks (if any)
            fireworks.forEach((fw, index) => {
                fw.update();
                fw.draw(ctx);
                if(fw.particles.length === 0) {
                    fireworks.splice(index, 1);
                }
            });

            requestAnimationFrame(animateBackground);
        }
    </script>
</body>
</html>
